    "scripts": {
        "update-repositories-for-wordpress": [
            "@php -r \"\\$c=json_decode(file_get_contents('composer.json'),true);\\$t=json_decode(file_get_contents('https://api.github.com/repos/WordPress/WordPress/tags?per_page=100',false,stream_context_create(['http'=>['ignore_errors'=>true,'header'=>'User-Agent: wp-composer-template']])),true);\\$c['repositories']=array_merge(array_filter(isset(\\$c['repositories'])?\\$c['repositories']:array(),function(\\$r){return !(isset(\\$r['type'])&&\\$r['type']=='package'&&isset(\\$r['package'])&&isset(\\$r['package']['name'])&&\\$r['package']['name']=='wordpress');}),array(array('type'=>'package','package'=>array('name'=>'wordpress','version'=>'dev-master','source'=>array('type'=>'git','url'=>'https://github.com/WordPress/WordPress.git','reference'=>'master')))),array_map(function(\\$t){return array('type'=>'package','package'=>array('name'=>'wordpress','version'=>\\$t['name'],'source'=>array('type'=>'git','url'=>'https://github.com/WordPress/WordPress.git','reference'=>\\$t['name'])));},array_merge(array_filter(\\$t,function(\\$t){return preg_match('#\\\\A\\\\d+(\\\\.\\\\d+)*\\\\z#',\\$t['name']);}))));file_put_contents('composer.json',json_encode(\\$c,JSON_PRETTY_PRINT | JSON_UNESCAPED_SLASHES));\""
        ],
        "post-install-cmd": [
            "@php -r \"\\$v=exec('composer config vendor-dir');file_exists(\\$v.DIRECTORY_SEPARATOR.'wp-config.php') || file_put_contents(\\$v.DIRECTORY_SEPARATOR.'wp-config.php', '<?php '.\\\"\\\\n\\\".'define(\\'ABSPATH\\',dirname(__FILE__).\\'/wordpress/\\');require(__DIR__.\\''.str_repeat(DIRECTORY_SEPARATOR.'..',count(explode(DIRECTORY_SEPARATOR,\\$v))).DIRECTORY_SEPARATOR.'wp-config.php\\');');\"",
            "@php -r \"\\$v=exec('composer config vendor-dir');file_exists('wp-config.php') || (! file_exists(\\$c=\\$v.DIRECTORY_SEPARATOR.'wordpress'.DIRECTORY_SEPARATOR.'wp-config-sample.php')) || copy(\\$c, 'wp-config.php');\""
        ]
    },
